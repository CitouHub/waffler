name: Waffler release

on:
  workflow_dispatch:

jobs:
  build_push_api:
    name: Build and push API image
    runs-on: ubuntu-18.04
      
    steps:
    - uses: actions/checkout@v2

    - name: Build and tag image for API
      run: docker build . --file Waffler.API/Dockerfile

  build_push_web:
    name: Build and push Web image
    runs-on: ubuntu-18.04
      
    steps:
    - uses: actions/checkout@v2.1.0
 
    - name: Build and tag image for Web
      run: docker build . --file Waffler.Web/Dockerfile
      
  build_push_api_armv7:
    runs-on: ubuntu-18.04
    name: Build and push API image (arm64)
      
    steps:
      - uses: actions/checkout@v2.1.0
      - uses: uraimo/run-on-arch-action@v2.0.5
        name: Run commands
        id: runcmd
        with:
          arch: armv7
          distro: ubuntu18.04
          run: |
            uname -a
            echo ::set-output name=uname::$(uname -a)
      - name: Get the output
        run: |
          echo "The uname output was ${{ steps.runcmd.outputs.uname }}"

      - name: Build and tag image for API
        run: docker buildx build --platform linux/arm64  . --file Waffler.API/Dockerfile.arm64
        
  build_push_web_armv7:
    runs-on: ubuntu-18.04
    name: Build and push Web image (arm64)
      
    steps:
      - uses: actions/checkout@v2.1.0
      - uses: uraimo/run-on-arch-action@v2.0.5
        name: Run commands
        id: runcmd
        with:
          arch: armv7
          distro: ubuntu18.04
          run: |
            uname -a
            echo ::set-output name=uname::$(uname -a)
      - name: Get the output
        run: |
          echo "The uname output was ${{ steps.runcmd.outputs.uname }}" 
          
      - name: Build and tag image for Web
        run: docker buildx build --platform linux/arm64 . --file Waffler.Web/Dockerfile
 
